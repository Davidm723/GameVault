<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= user.username %>'s Games
    </title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
</head>

<body>
    <%- include('../partials/_navbar.ejs') %>
        <div class="all-games-body">
            <div class="all-games-header">
                <h1>
                    <%= user.username %>'s Games
                </h1>
            </div>
            <a class="add-game-link" href="/users/<%= user._id %>/games/new">Add New Game</a>
            <ul class="games-ul">
                <% if (games.length> 0) { %>
                    <% games.forEach((game)=> { %>
                        <li class="games-li">
                            <a href="/users/<%= user._id %>/games/<%= game._id %>">
                                <div class="games-img">
                                    <img class="box-art" src="<%= game.imageUrl %>" alt="<%= game.title %>" >
                                </div>
                                <div class="game-name">
                                    (<%= game.system %>) <%= game.title %>
                                </div>
                            </a>
                        </li>
                        <% }) %>
                            <% } else { %>
                                You have no games
                                <% } %>
            </ul>
            <div>
                <%- include('../partials/_footer.ejs') %>
            </div>
        </div>
</body>

</html>