<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= user.username %>'s Games
    </title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
</head>

<body>
    <div class="all-games-body">
        <%- include('../partials/_navbar.ejs') %>
            <div class="all-games-header">
                <h1>
                    <%= user.username %>'s Games
                </h1>
            </div>
            <a class="add-game-link" href="/users/<%= user._id %>/games/new">Add New Game</a>
            <ul class="games-ul">
                <% games.forEach((game)=> { %>
                    <li class="games-li">
                        <a href="/users/<%= user._id %>/games/<%= game._id %>"><img src="<%= game.imageUrl %>"
                                alt="<%= game.title %>" height="150px" width="auto"></a>
                        <a href="/users/<%= user._id %>/games/<%= game._id %>">
                            (<%= game.system %>) <%= game.title %>
                        </a>
                    </li>
                    <% }) %>
            </ul>
    </div>
</body>

</html>